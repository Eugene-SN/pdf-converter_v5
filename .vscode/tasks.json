{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Codex: Apply patch & Push (cross-platform)",
      "type": "shell",
      "command": "echo",
      "args": ["Select OS-specific override"],
      "options": { "cwd": "${workspaceFolder}" },
      "osx": {
        "command": "./apply_patch_mac.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": { "executable": "/bin/zsh", "args": ["-lc"] }
        }
      },
      "windows": {
        "command": "powershell",
        "args": [
          "-NoProfile",
          "-ExecutionPolicy", "Bypass",
          "-File", "${workspaceFolder}\\apply_patch_win.ps1"
        ],
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "executable": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
            "args": []
          }
        }
      },
      "problemMatcher": [],
      "group": { "kind": "build", "isDefault": true },
      "presentation": { "reveal": "always", "panel": "dedicated", "clear": true }
    }
  ]
}
